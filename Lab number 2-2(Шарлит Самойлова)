#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define M 6  // Константа размерности массива "MxM"
#define L M/2  //Константа, равная половине массива
#define Y 10  //Константа для задания ограничения генерации случайных чисел от 0 до "Y - 1"

int main() {  //Главная функция
    
    int a[M][M];
    int i, j;  //Объявление счётчиков для прохода по строкам и столбцам массива "M"
    int min = 0, max = 0;  //Объявление "минимально и максимального значения" для поиска из условия
    
    srand((unsigned int)time(NULL));  //Позволяет генерировать новые случайные числа
    
    printf("\n\n");  //Отступ для красоты вывода
    
    for (i = 0; i < M; i++) {  //Проход по строкам
        
        for (j = 0; j < M; j++) {  //Проход по столбцам
            
            a[i][j] = rand() % Y;  //Заполнение элемента матрицы случайным числом
            printf("%5d", a[i][j]);  //Вывод отдельно эелемента массива
            
        }
        
        printf("\n\n");  //Отступ для красоты вывода + перенос на новую строку
        
    }
    
    printf("\n\n");  //Пробел между мтрицами
    
    min = a[0][0];
    max = a[0][0];
    
    for (i = 0; i < L; i++) {  //Проход по первой половине строк массива
        
        for (j = 0; j < i + 1; j++) {  //Левая верхняя зелёная область
            
            printf("%5d", a[i][j]);  //Вывод отдельно элемента массива на экран
            
            if (a[i][j] < min) {  //Условие для сравнения числа с минимальным
                
                min = a[i][j];  //Присвоение к "минимальному", если условие удовалетворило
                
            }
            
        }
        
        for (j = j; j < L - i; j++) {  //Левая верхняя красная область
            
            printf("%5d", a[i][j]);  //Вывод отдельно элемента массива на экран
            
        }
        
        for (j = L + 1; j < M - i; j++) {  //Правая верхняя красная оласть
            
            printf("%5d", a[i][j]);  //Вывод отдельно элемента массива на экран
            
        }
        
        for (j = j; j <= M; j++) {  //Правая верхняя зелёная область
            
            printf("%5d", a[i][j]);  //Вывод отдельно элемента массива на экран
            
            if (a[i][j] > max) {  //Условие для сравнения числа с максимальным
                
                max = a[i][j];  //Присвоение к "максимальному", если условие удовалетворило
                
            }
            
        }
        
        printf("\n\n");  //Отступ для красоты вывода
        
    }
        
    for (i = 0; i < L; i++) {  //Проход по последней половине строк массива
        
        for (j = L; j < M - i; j++) {  //Левая нижняя зелёная область
            
            printf("%5d", a[i][j]);  //Вывод отдельно элемента массива на экран
            
            if (a[i][j] < min) {  //Условие для сравнения числа с минимальным
                
                min = a[i][j];  //Присвоение к "минимальному", если условие удовалетворило
                
            }
            
        }
        
        for (j = j; j < M; j++) {  //Правая нижняя красная область
            
            printf("%5d", a[i][j]);  //Вывод отдельно элемента массива на экран
            
        }
        
        if (i > 0) {  //Условие на проверку нижней части массива, где не к чему цепляться
            
            for (j = L; j < M - L + i; j++) {  //Правая нижняя красная область
                
                printf("%5d", a[i][j]);  //Вывод отдельно элемента массива на экран
                
            }
            
        }
        
        for (j = L; j < M - i; j++) {  //Правая нижняя зелёная область
            
            printf("%5d", a[i][j]);
            
            if (a[i][j] > max) {  //Условие для сравнения числа с максимальным
                
                max = a[i][j];  //Присвоение к "максимальному", если условие удовалетворило
                
            }
            
        }
        
        printf("\n\n");  //Отступ для красоты вывода
        
    }
    
    printf("\n");  //Отступ для красоты вывода
    
    printf("Минимальное значение в левой области массива: %d\n", min);  //Вывод на экран минимального числа
    printf("Максимально значение в правой области массива: %d\n\n", max);  //Вывод на экран максимального числа
    
    int b[L];  //Объявление массива для заполнения кол-вом нолей
    int counter = 0;  //Счётчик нолей
    int k = 0;  //Объявление счётчика индекса массива
    
    for (j = 0; j < M; j++) {  //Проход по столбцам(Инверсия)
        
        if (j % 2 != 0) {  //Проверка столбика на нечётность "ПО ИНДЕКСАМ!!!"
            
            for (i = 0; i < M; i++) {  //Проход по строкам(Инверсия)
                
                if (a[i][j] == 0) {  //Условие проверки "0"
                    
                    counter++;  //Счётчик нолей
                    
                }
                
            }
        
            b[k] = counter;  //Присвоение к каждому элементу массива количество нулей в столбике
            counter = 0;  //Обнуление счётчика для подсчёта нолей в столбике
            k+=1;  //Счётчик вместо "for"
            
        }
            
    }
    
    printf("Массив [ ");  //Визуальное ограничение массива(Начало)
    for (i = 0; i < L; i++) {  //Цикл для прохода по всем элементам массива
        
        printf("%d ", b[i]);  //Вывод каждого элемента массива
        
    }
    printf("]\n\n");  //Визуально ограничение массива(Конец)
    
}
