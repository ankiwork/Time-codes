include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define M 5  //Произвольный массив длинной "M"

float FindMin(float a[M]) {  //Функция поиска индекса минимального значения
    
    int i;  //Счёчтик для прохода по массиву
    int min = a[0];  //Возвращаемое значение вспомогательной функции
    int k = 0;  //переменная для индекса
    
    for (i = 0; i < M; i++) {  //Проход по массиву(Инверсия)
        
        if (a[i] < min) {  //Проверка на меньший элемент
            
            min = a[i];  //Присвоение наименьшего
            k = i;
            
        }
        
    }
    
    return k;  //Вернуть значение(Индекс)
    
}

int main() {  //Главная функция
    
    srand((unsigned int)time(NULL));  //Позволяет генерировать каждый раз "Новые" случайные числа
    
    float a[M];  //Объявление массива
    int i;  //Счёчтик для прохода по массиву
    int k;  //Возвращаемое значение
    
    printf("Массив: [ ");  //Визуальное начало массива
    for (i = 0; i < M; i++) {  //Проход по массиву
        
        a[i] = 0.4 + rand() % 9/1.5;  //Генерация случайного числа для "Отдельного элемента массива"
        printf("%.1f ", a[i]);  //Вывод на экран
        
    }
    printf("]\n\n");  //Визуальное закрытие массива + перенос + отделение для нового вывода
    
    k = FindMin(a);  //Вызов вспомогательной функции + передать массив "а"
    printf("Индекс минимального элемента массива: %d\n\n", k);  //Вывод + отступ для красоты

    return 0;  //Вернуть 0
    
}
