#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <time.h>

#define N 3
#define A 2

int* FindingTheNumberOfPositiveNegativeNumbers(int matrix[N][N]) {

	int positive = 0, negative = 0;
	for (int i = 0; i < N; i++) {
		for (int j = 0; j < N; j++) {
			if (i + j > N - 1) {
				if (matrix[i][j] % 2 == 0) {
					positive++;
				}
				else {
					negative++;
				}
			}
		}
	}

	int* pB[A];
	pB[0] = &positive;
	pB[1] = &negative;

	return *pB;

}

int main(int argc, const char* argv[]) { 

	setlocale(LC_ALL, "Russian");
	srand(time(NULL));

	int matrix[N][N];
	printf("\n\n");
	for (int i = 0; i < N; i++) {
		for (int j = 0; j < N; j++) {
			if (i + j == N - 1) {
				matrix[i][j] = 1 + rand() % 19 - 10;
				printf("\x1B[33m%5d\033[0m", matrix[i][j]);
			}
			if (i + j < N - 1) {
				matrix[i][j] = 1 + rand() % 19 - 10;
				printf("\x1B[31m%5d\033[0m", matrix[i][j]);
			}
			if (i + j > N - 1) {
				matrix[i][j] = 1 + rand() % 19 - 10;
				printf("\x1B[32m%5d\033[0m", matrix[i][j]);
			}
		}
		printf("\n\n");
	}

	int* pB[A];
	*pB = FindingTheNumberOfPositiveNegativeNumbers(matrix);
	printf("Количество положительных чисел: %d\n", *pB[0]);
	printf("Количество отрицательных чисел: %d\n", *pB[1]);

	return 0;

}
