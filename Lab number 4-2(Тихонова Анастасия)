#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <time.h>

#define N 3

int* FindingTheNumberOfPositiveNumbers(int matrix[N][N]) {

    int counter = 0;
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            if (i + j > N - 1) {
                if (matrix[i][j] >= 0) {
                    counter++;
                }
            }
        }
    }

    int* positive = &counter;
    return positive;

}

int* FindingTheNumberOfNegativeNumbers(int matrix[N][N]) {

    int counter = 0;
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            if (i + j > N - 1) {
                if (matrix[i][j] < 0) {
                    counter++;
                }
            }
        }
    }

    int* negative = &counter;
    return negative;

}

int main(int argc, const char* argv[]) {

    setlocale(LC_ALL, "Russian");
    srand(time(NULL));

    int matrix[N][N];
    printf("\n\n");
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            if (i + j == N - 1) {
                matrix[i][j] = 1 + rand() % 19 - 10;
                printf("\x1B[33m%5d\033[0m", matrix[i][j]);
            }
            if (i + j < N - 1) {
                matrix[i][j] = 1 + rand() % 19 - 10;
                printf("\x1B[31m%5d\033[0m", matrix[i][j]);
            }
            if (i + j > N - 1) {
                matrix[i][j] = 1 + rand() % 19 - 10;
                printf("\x1B[32m%5d\033[0m", matrix[i][j]);
            }
        }
        printf("\n\n");
    }

    int* pA;
    pA = FindingTheNumberOfPositiveNumbers(matrix);
    printf("Количество положительных чисел: %d\n", *pA);

    int* pB;
    pB = FindingTheNumberOfNegativeNumbers(matrix);
    printf("Количество отрицательных чисел: %d\n", *pB);

    return 0;

}
