#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define M 10  //Размерномть массива "M"
#define Y 9  //Ограничение генератора случайных чисел(от 1 до Y)

int main() {
    
    int a[M];  //Объявление массива "a", с размерностью "M"
    int i;  //Объявление счётчика "i", для прохода по всем значениям массива "M"
    int j;  //Счётчик для упорядочивания массива по убыванию
    int k;  //Переменная для временного хранения меняемого значения массива
    double sr = 0;  //Переменная для подсчёта среднего арефметического числа
    int counter = 0;  //Счётчик количества чисел для нахождения среднего арифметического числа
    
    srand((unsigned int)time(NULL));  //Позволяет генерировать каждый раз новые числа
    
    printf("Массив [ ");  //Визуальное начало массива в консоли
    for (i = 0; i < M; i++) {  //Цикл для прохода по всем индексам массива
        
        a[i] = 1 + rand() % Y;  //Заполнение массива рандомными числами от 1 до Y
        printf("%d ", a[i]);  //Вывод каждого элемента массива
        
    }
    printf("]\n\n");  //Визуальное завершение массива в консоли
    
    printf("Упорядоченный по убыванию массив [ ");  //Визуальное начало массива в консоли
    for (i = 0; i < M; i++) {  //Цикл для прохода по всем индексам массива
        
        for (j = i + 1; j < M; j++) {  //Цикл для прохода по существующему и следующему на проверку "больше" и "меньше"
            
            if (a[i] < a[j]) {  //Условие убывающего массива
                
                k = a[i];  //Сохранить значение массива в переменную "K", во избежании утраты
                a[i] = a[j];  //Меняем местами
                a[j] = k; //Меняем местами
                
            }
            
        }
        
        printf("%d ", a[i]);  //Вывод каждого элемента массива
        
    }
    printf("]\n\n");  //Визуальное завершение массива в консоли
    
    for (i = 0; i < M; i++) {  //Цикл для прохода по всем индексам массива
        
        if (i % 2 == 0) {  //Условие проверки чётного индекса массива
            
            sr+=a[i];  //Прибавить к общей сумме;
            counter++;  //Счётчик количества чётных индексов
            
        }
        
    }
    printf("Cреднее арифметическое: %.1lf\n\n", sr/counter);  //Вывод в консоль среднего арифметического 
    
}
